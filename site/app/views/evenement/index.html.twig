{% extends '_template/base.html.twig' %}

{% block body %}
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th scope="col">#ID</th>
        <th scope="col">Nom</th>
        <th scope="col">Date et heure</th>
        <th scope="col">Description</th>
        <th scope="col">Adresse</th>
        <th scope="col">Nombre de places</th>
    </tr>
    </thead>
    <tbody>
   {% for evenement in evenementss %}
        <tr>
            <td>{{ evenement.id }}</td>
            <td>{{ evenement.nom }}</td>
            <td>{{ evenement.date_heure}}</td>
            <td>{{ evenement.adresse}}</td>
            <td>{{ evenement.nb_places}}</td>
            <td>
                <a href="evenement_update.php?id={{ evenement.id}}" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                <a href="evenement_delete.php?id={{ evenement.id}}" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="d-flex flex-row-reverse">
    <a href="evenement_create.php" class="btn btn-success">
        <i class="fa fa-plus"></i> Ajouter un évènement
    </a>
</div>
{% endblock %}